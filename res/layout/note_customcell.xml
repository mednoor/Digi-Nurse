<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/date_created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dateCreated"
        android:layout_below="@id/title"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/date_updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dateUpdated"
        android:layout_toRightOf="@id/date_created"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/title"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/stateImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_states_ok"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="4sp"
        android:layout_marginRight="10sp" />
    <View 
        android:layout_marginTop="5dp"
        android:background="@color/noteBg"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/date_updated"/>

</RelativeLayout>